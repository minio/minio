  <script>
    // 注转 拽驻专爪转 Firebase 拽抓 拽
    if (typeof firebase === 'undefined') {
      console.error('Firebase  注');
    }
    
    // 转 Firebase (注 拽抓 firebase-config.js)
    document.addEventListener('DOMContentLoaded', function() {
      // 拽  Firebase 
      if (typeof firebase !== 'undefined' && firebase.apps.length === 0) {
        // 注转 拽驻专爪 拽抓 拽
        fetch('firebase-config.js')
          .then(response => response.text())
          .then(data => {
            // 抓 拽 config 拽抓
            const configMatch = data.match(/const\s+firebaseConfig\s*=\s*({[\s\S]*?});/);
            if (configMatch) {
              const configStr = configMatch[1];
              const config = eval('(' + configStr + ')');
              firebase.initializeApp(config);
              console.log('Firebase 转 爪');
            }
          })
          .catch(error => {
            console.error('砖 注转 拽驻专爪转 Firebase:', error);
          });
      }
    });
    
    function startLearning() {
      // 爪 驻转专
      const button = document.querySelector('.main-button');
      button.style.transform = 'scale(0.95)';
      
      setTimeout(() => {
        button.style.transform = '';
        // 注专 注 爪转 爪转
        window.location.href = 'presentation-viewer.html';
      }, 150);
    }
    
    // 驻拽 爪 注转 注
    window.addEventListener('load', function() {
      // 住驻转 驻拽 专 驻转专 专砖
      const button = document.querySelector('.main-button');
      let glowInterval = setInterval(() => {
        button.style.boxShadow = '0 15px 40px rgba(231,76,60,0.8), 0 0 20px rgba(255,255,255,0.5)';
        setTimeout(() => {
          button.style.boxShadow = '0 10px 30px rgba(231,76,60,0.4)';
        }, 1000);
      }, 3000);
      
      // 注爪专转 驻拽 专 注专 注专
      button.addEventListener('mouseenter', () => {
        clearInterval(glowInterval);
      });
    });
    
    // 驻拽 拽拽 注 专拽注 (驻爪)
    function createFloatingParticles() {
      const container = document.querySelector('.container');
      const particleCount = 15;
      
      for (let i = 0; i < particleCount; i++) {
        const particle = document.createElement('div');
        particle.style.cssText = `
          position: absolute;
          width: 4px;
          height: 4px;
          background: rgba(255,255,255,0.3);
          border-radius: 50%;
          pointer-events: none;
          animation: float ${Math.random() * 6 + 4}s ease-in-out infinite;
          left: ${Math.random() * 100}%;
          top: ${Math.random() * 100}%;
          animation-delay: ${Math.random() * 5}s;
        `;
        container.appendChild(particle);
      }
    }
    
    // 住驻转 爪转 拽拽
    const style = document.createElement('style');
    style.textContent = `
      @keyframes float {
        0%, 100% {
          transform: translateY(0px) translateX(0px);
          opacity: 0.3;
        }
        50% {
          transform: translateY(-20px) translateX(10px);
          opacity: 0.8;
        }
      }
    `;
    document.head.appendChild(style);
    
    // 爪专转 拽拽
    createFloatingParticles();
  </script>
</body>
